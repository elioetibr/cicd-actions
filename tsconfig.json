{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "newLine": "lf"
  },
  "exclude": [
    "./coverage",
    "./dist",
    "./node_modules",
    "./src/**/*.spec.ts",
    "./src/**/*.test.ts",
    "./src/__tests__/**/*",
  ],
  "include": [
    "src/**/*"
  ],
  "watchOptions": {
    "synchronousWatchDirectory": true,
  }
}
